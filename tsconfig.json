{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": [
			"es2015",
			"dom",
            "esnext.asynciterable"
        ],
        "jsx": "react-native",
        "declaration": true,
        "outDir": "./dist",
        "strict": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "types": [
            "jest"
        ],
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*.ts"
	],
	"exclude": [
		"src/**/*.spec.ts"
	]
}
