{
	"name": "is-it-shabbat-core",
	"version": "1.4.0",
	"main": "dist/index.js",
	"license": "MIT",
	"author": "James Fulford <james.fulford@outlook.com>",
	"husky": {
		"hooks": {
			"pre-commit": "yarn lint",
			"pre-push": "yarn test && yarn build"
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"prebuild": "rm -rf ./dist",
		"build": "tsc",
		"lint": "tslint -p tsconfig.json",
		"test": "jest",
		"ci": "yarn lint && yarn test --ci --coverage",
		"report": "yarn test --coverage",
		"scan": "yarn report && bash scripts/scan.sh",
		"prepare": "yarn build",
		"tdd": "yarn test --watch"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"axios": "0.18.0",
		"luxon": "1.8.0",
		"react": "16.7.0",
		"redux": "4.0.0",
		"shabbat-logic": "1.0.0",
		"tz-lookup": "6.1.8"
	},
	"devDependencies": {
		"@types/jest": "24.0.13",
		"@types/react": "16.7.0",
		"husky": "1.2.1",
		"jest": "24.8.0",
		"react-test-renderer": "16.8.6",
		"sonarqube-scanner": "2.1.2",
		"ts-jest": "24.0.2",
		"tslint": "5.16.0",
		"tslint-config-airbnb": "5.11.1",
		"typescript": "3.4.5"
	}
}
